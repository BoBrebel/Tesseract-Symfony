{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Emoticon</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Text</th>
                <td>{{ entity.text }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ entity.img }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('emoticon') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('emoticon_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
