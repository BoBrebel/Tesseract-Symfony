{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BlogPost list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Img</th>
                <th>Vdo</th>
                <th>Date</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('blogpost_show', { 'id': entity.id }) }}">{{ entity.titre }}</a></td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.img }}</td>
                <td>{{ entity.vdo }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('blogpost_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('blogpost_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('blogpost_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
