                <td>{{ entity.difficulte }}</td>
                <td>{{ entity.duree }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('epreuve_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('epreuve_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('epreuve_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
