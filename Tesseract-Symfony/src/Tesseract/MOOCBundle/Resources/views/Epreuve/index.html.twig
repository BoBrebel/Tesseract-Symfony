            <tr>
                <th>Idcours</th>
                <th>Type</th>
                <th>Difficulte</th>
                <th>Duree</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('epreuve_show', { 'id': entity.id }) }}">{{ entity.idCours }}</a></td>
