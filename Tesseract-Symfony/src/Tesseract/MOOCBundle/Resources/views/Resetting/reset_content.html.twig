{% trans_default_domain 'FOSUserBundle' %}
<h2>Tape your passeword</h2>
{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form form-validate floating-label' } }) }}
    
<div class="form-group">
    {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control'}}) }}

    <label for="Password1">Password</label>
</div>

<div class="form-group">
    {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control'}}) }}
    <label for="Password2">Repeat password</label>
</div>
    <div>
        <div class="card-actionbar">
        <div class="card-actionbar-row">
            <button type="submit"   class="btn btn-flat btn-primary ink-reaction" >  Validate</button>
        </div>
    </div>
    </div>
{{ form_end(form) }}
