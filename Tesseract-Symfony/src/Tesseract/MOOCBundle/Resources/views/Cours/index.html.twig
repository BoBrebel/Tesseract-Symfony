

    <div class="col-md-8">
       
        <div class="card">
             {% for entity in entities %}
            <div class="card-head" style="height: 10%">
                <div class="tile-text" style="padding-left: 3%;">  {{entity.nom}}</div>
                <div class="social-course">{{ facebookButton({'locale':'en_En'}) }}{{ twitterButton({'locale':'en_En'} ) }}</div>
            </div>
            <div class="card-body no-padding">
                <ul class="list divider-full-bleed">
                    
                        <li class="tile">
                            <a class="tile-content ink-reaction" href="#2" style="width: 80%">
                                <div class="tile-icon">
                                    <img src="{{ asset(entity.affiche )}}" alt="" />
                                </div>
                                <div class="tile-text"> {{entity.description}} {{entity.difficulte}}</div>
                            </a>
                            <a class="ink-reaction">
                                <h4>{{date()|date("d")- entity.upload|date("d")}} Days ago</h4>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>