{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cours</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Difficulte</th>
                <td>{{ entity.difficulte }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Badge</th>
                <td>{{ entity.badge }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{{ entity.affiche }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ entity.video }}</td>
            </tr>
            <tr>
                <th>Validation1</th>
                <td>{{ entity.validation1 }}</td>
            </tr>
            <tr>
                <th>Validation2</th>
                <td>{{ entity.validation2 }}</td>
            </tr>
            <tr>
                <th>Language</th>
                <td>{{ entity.language }}</td>
            </tr>
            <tr>
                <th>Upload</th>
                <td>{{ entity.upload|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cours') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('cours_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
